                </Grid>
            </PivotItem>
            <PivotItem Header="Name">
                <Grid>
                    <Image x:Name="imagePreview" HorizontalAlignment="Left" Height="445" Margin="0,0,0,0" VerticalAlignment="Top" Width="360"/>
                    <TextBox HorizontalAlignment="Left" Margin="10,455,0,0" TextWrapping="Wrap" Text="Add a subtitle..." VerticalAlignment="Top" Width="340" Height="39"/>

                </Grid>
            </PivotItem>
            <PivotItem Header="Rada">
                <Grid>

                </Grid>
            </PivotItem>
        </Pivot>

    </Border>
</Page>

